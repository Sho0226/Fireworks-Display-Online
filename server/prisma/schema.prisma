datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  email      String
  signInName String
  createdAt  DateTime
  tasks      Task[]
  Room       Room[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Room {
  id         String     @id
  name       String
  password   String?    @unique
  status     RoomStatus
  createdAt  DateTime
  updatedAt  DateTime?
  lastUsedAt DateTime?
  creatorId  String     @map("createdBy")
  Creator    User       @relation(fields: [creatorId], references: [id])
}

enum RoomStatus {
  PUBLIC
  PRIVATE
}
